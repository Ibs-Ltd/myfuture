<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="@dimen/margin20"
    android:layout_marginTop="@dimen/margin12"
    android:layout_marginBottom="@dimen/margin30"
    android:fitsSystemWindows="true"
    tools:context="com.myfutureapp.profile.ui.NameFragment">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Email Address"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize16"
            style="@style/textViewStyle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin10"
            android:layout_marginTop="@dimen/margin30"
            android:background="@drawable/border_edit_sky_blue">

            <EditText
                style="@style/textViewStyle"
                android:id="@+id/nameProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin10"
                android:background="@null"
                android:imeOptions="actionDone"
                android:paddingHorizontal="@dimen/margin10"
                android:paddingVertical="@dimen/margin10"
                android:singleLine="true" />


        </LinearLayout>
        <TextView
            style="@style/textViewStyle"
            android:layout_marginHorizontal="@dimen/margin30"
            android:layout_marginTop="@dimen/margin10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="For Example: navi@gmail.com"
            android:textColor="@color/warm_gray"
            android:textSize="@dimen/textsize12" />
    </LinearLayout>

    <TextView
        style="@style/textViewStyle"
        android:id="@+id/saveName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_greish_btn_disable"
        android:paddingVertical="10dp"
        android:text="Continue"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize16"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>

