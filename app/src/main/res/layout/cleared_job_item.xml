<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_edit_grey"
    android:orientation="vertical"
    android:layout_marginVertical="@dimen/margin10"
    android:layout_marginHorizontal="@dimen/margin20"
    android:padding="@dimen/margin10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:id="@+id/clearedUserPic"
            android:layout_width="70dp"
            android:layout_height="70dp"

            android:layout_centerInParent="true"
            android:src="@drawable/ic_vector_default_profile" />

        <LinearLayout
            android:layout_marginHorizontal="@dimen/margin10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/textViewStyle"
                android:id="@+id/clearedUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin10"
                android:text="Rachi Singh"
                android:textColor="#222222"
                android:textSize="@dimen/textsize16"
                android:textStyle="bold" />

            <TextView
                style="@style/textViewStyle"
                android:id="@+id/clearedRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Marketing Manager"
                android:textColor="#222222"
                android:textSize="@dimen/textsize16" />

            <TextView
                style="@style/textViewStyle"
                android:id="@+id/clearedCompanyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google Pvt. Ltd."
                android:textColor="#222222"
                android:textSize="@dimen/textsize14"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/clearedStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin5"
        android:layout_marginBottom="@dimen/margin5"
        android:text="Cleared on her 5th attempt"
        android:textColor="#3e3e3e"
        android:textSize="@dimen/textsize12"
        android:textStyle="bold" />
</LinearLayout>