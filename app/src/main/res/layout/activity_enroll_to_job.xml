<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.myfutureapp.applyJob.ui.EnrollToJobActivity"
    android:orientation="vertical"
    android:padding="@dimen/margin10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_lightbluee_border"
        android:layout_marginTop="@dimen/margin15">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textSize="@dimen/textsize12"
            android:textStyle="bold"
            android:text="80%"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/warm_gray"
            android:textSize="@dimen/textsize12"
            android:layout_margin="@dimen/margin5"
            android:text="Candidates who enrolled with us have \n landed a job"/>
    </LinearLayout>

</LinearLayout>